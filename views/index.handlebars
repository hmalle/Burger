
<div class="container">
  <div class="jumbotron bg-dark">
    <img src="/assets/img/burger.jpeg">
    <h1 class="float-right"> Burgers</h1>
  </div>

  <div class="row">  
    <div class="col-md-6 ">
      <h3>Burgers ready for you</h3>
      <div id="not-eaten">
        {{#each burger}}
          {{#unless devoured}}
            <div id="burger-div">
              <p>{{id}}: {{burger_name}}</p>
            </div>
            <div id="button-div">
              <button id="devour" class="btn" data-id="{{id}}" data-devoured="{{devoured}}">Devour</button>
            </div>
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-md-6">
      <h3>Burgers Eaten</h3>
      <div id="eaten" >
        {{#each burger}}
          {{#if devoured}}
            <div id="burger-div">
              <p>{{id}}: {{burger_name}}</p>
            </div>
          {{/if}}
        {{/each}}
      </div> 
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-md-4 col-md-offset-5">
      <form class="create-form">
        <div class="form-group">
          <textarea class="form-control" id="burgerName" name="burger_name"></textarea>
        </div>
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>
